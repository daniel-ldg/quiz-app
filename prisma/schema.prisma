// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Question {
  question      String
  answers       String[]
  correctAnswer String
}

model Quiz {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  questions    Question[]
  gamerResults GameResult[]
  Lobbies      Lobby[]
}

enum Color {
  gray
  red
  orange
  amber
  yellow
  lime
  green
  emerald
  teal
  cyan
  sky
  blue
  indigo
  violet
  purple
  fuchsia
  pink
  rose
}

enum Avatar {
  ant
  bee
  butterfly
  cat
  cow
  dog
  dragonfly
  duck
  elephant
  fly
  fox
  frog
  giraffe
  hippo
  horse
  leopard
  monkey
  mouse
  octopus
  owl
  panda
  placeholder
  quail
  rabbit
  shark
  sheep
  spider
  tiger
  whale
  wolf
  zebra
}

type Player {
  id     String
  name   String
  color  Color
  avatar Avatar
}

type QuestionResult {
  question Question
  player   Player
  response Int
  score    Int
}

model GameResult {
  id      String           @id @default(auto()) @map("_id") @db.ObjectId
  quiz    Quiz             @relation(fields: [quizId], references: [id])
  quizId  String           @db.ObjectId
  results QuestionResult[]
}

model Lobby {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  quizId      String   @db.ObjectId
  displayName String
  accessCode  String?
  created     DateTime @default(now())
  host        Player
}
